<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ofppt.absys">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="false"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_absys"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_absys"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:theme">
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:name=".Main.UI.AddGroup"
            android:theme="@style/Theme.MaterialComponents.Light" />
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:name=".Main.UI.AddFiliere"
            android:theme="@style/Theme.MaterialComponents.Light" />
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:name=".Main.UI.Absence"
            android:theme="@style/Theme.MaterialComponents.Light" /> <!-- My Lovcal Activitier For Tisting -->
        <activity android:name=".Main.TestActivities.TestTables"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".Main.UI.Filiere_Menu"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main.UI.AddFormateur"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".Main.UI.Groups_Menu"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".Main.UI.About"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ofppt.absys.Main.UI.Settings" />
        </activity>
        <activity android:name=".Main.UI.Settings"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value="com.ofppt.absys.UI..MainActivity" /> -->
        </activity>

        <meta-data
            android:name="AA_MODELS"
            android:value="com.ofppt.absys.Moduls.FILIERES, com.ofppt.absys.Moduls.GROUPES, com.ofppt.absys.Moduls.STAGIAIRES, com.ofppt.absys.Moduls.FORMATEURS, com.ofppt.absys.Moduls.ABSENCES" />
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Absence.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity android:name=".Main.UI.SplashScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.ofppt.absys"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>